@model IEnumerable<PizzaManagement.Models.Pizza>

@{
    ViewData["Title"] = "Pizza";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrEdit" class="btn btn-sm btn-primary">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topping3)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping1.ToppingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping2.ToppingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Topping3.ToppingName)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id">
                    <div class="btn-group btn-group-sm">
                        <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this pizza?')">
                            Delete
                        </button>
                    </div>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
