@model IEnumerable<PizzaManagement.Models.Topping>

@{
    ViewData["Title"] = "Toppings";
}

<h1>Index</h1>

<p>
    <a asp-action="AddOrEdit" class="btn btn-sm btn-primary">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToppingName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToppingName)
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    
                    <div class="btn-group btn-group-sm">
                        <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this topping?')">
                            Delete
                        </button>
                    </div>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
